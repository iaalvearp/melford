---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;

---




<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ description } />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="w-full min-h-screen relative">
		<img class="fixed w-full h-screen object-cover object-center -z-20" src="img/fixed-bg.webp" alt="">
		<div class="fixed w-full h-screen -z-10 bg-primary/30"></div>
		<slot />
	</body>
	<script src="../../index.js" type="module"></script>
</html>
<style is:global>
	.spc {
		letter-spacing: 0.5px;
	}
	 .spc1 {
        letter-spacing: 0px;
    }
    .spc1-2 {
        letter-spacing: 1px;
    }

	.softMove {
		animation: softMove 8s linear infinite both;
	}
	
	.move {
		animation: softMove 6s linear infinite both;

	}

	#photoSection, #dateSection, #directionSection, #dressCode, #footerSection, #itinerarySection, #pictureSection {
		animation: appears linear forwards;
		animation-timeline: view();
		animation-range: entry 30% cover 40%;
	}

	@keyframes appears {
		0% {
			opacity: 0;
			transform: scale(.5) translateY('5rem');
		}
		100% {
			opacity: 1;
			transform: scale(1) translateY(0);
		}
	}
	.movingLeftLeaves {
		animation: movingLeftLeaves 4s ease infinite both;
	}

	.cristal {
		background-color: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(0.25rem);
	}

	@keyframes move {
			0% {
				transform: rotate(2deg) translateX(0px);
			}
			50% {
				transform: rotate(-10deg) translateX(10px);
			}
			100% {
				transform: rotate(2deg) translateX(1px);
			}
		}
		@keyframes softMove {
			0% {
				transform: rotate(2deg) translateX(0px);
			}
			50% {
				transform: rotate(-6deg) translateX(10px);
			}
			100% {
				transform: rotate(2deg) translateX(1px);
			}
		}
		@keyframes movingLeftLeaves {
			0%{
				left: -30%;
				transform: rotate(2deg);
			}
			50%{
				left: -32%;
				transform: rotate(-2deg);
			}
			100%{
				left: -30%;
				transform: rotate(2deg);
			}
		}

    @media (width > 767px) {
		.spc {
			letter-spacing: 1px;
		}
        .spc1 {
            letter-spacing: 1px;
        }
        .spc1-2 {
            letter-spacing: 2px;
        }

		@keyframes softMove {
			0% {
				transform: rotate(2deg) translateX(0px);
			}
			50% {
				transform: rotate(-4deg) translateX(10px);
			}
			100% {
				transform: rotate(2deg) translateX(1px);
			}
		}
		
	}
	@font-face {
		font-family: "brand";
		src: url('/fonts/Brand.otf');
	}
	@font-face {
		font-family: "against";
		src: url('/fonts/against.ttf');
	}

	@font-face {
		font-family: "montse";
		src: url('/fonts/Montse.ttf');
	}

	
</style>
