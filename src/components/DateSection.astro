---
import MusicPlayer from "./MusicPlayer.astro"
---

<section id="dateSection" class="cristal w-full max-w-3xl min-h-full relative mx-auto text-text py-8 overflow-hidden">
    <picture class="w-full h-24 md:h-48 flex justify-between items-center relative">
        <img class="softMove w-[70%] max-w-[30rem] h-auto absolute -left-[30%]" src="img/leaves-2.png" alt="">
        <img class="softMove w-[44%] max-w-[30rem] h-auto right-0 absolute" src="img/leaves-3.png" alt="">
    </picture>
    <img class="aspect-square beforeAppears w-4/5 max-w-sm mx-auto" src="img/date.svg" alt="">
    <img class="beforeAppears w-4/5 max-w-lg mx-auto mt-4" src="img/calendar.svg" alt="">
    <img class="absolute w-[45%] -right-14 md:-right-[4.5rem] bottom-[0.125rem] md:-bottom-[2.325rem] -z-10" src="img/leaves-4.png" alt="">
</section>

<style>
    picture img:nth-child(1) {
        transform-origin: 0% 50%;
    }
    picture img:nth-child(2) {
        transform-origin: 100% 50%;
        animation-delay: 2s;
    }
</style>